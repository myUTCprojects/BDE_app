<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:gravity="center_horizontal"
        android:background="@color/black"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/beige">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mes assos"
                android:textSize="22dp"
                android:textColor="@color/white"
                android:layout_marginTop="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"/>

            <Button
                android:id="@+id/mesAssos"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:alpha="0"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/gris_fonce">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mes évènements"
                android:textSize="22dp"
                android:layout_marginTop="80dp"
                android:textColor="@color/white"
                android:layout_centerInParent="true"/>

            <Button
                android:id="@+id/mesEvenements"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:alpha="0"/>


        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/gris_fonce">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ajouter une asso"
                android:textSize="22dp"
                android:textColor="@color/white"
                android:layout_marginTop="50dp"
                android:layout_centerInParent="true"/>

            <Button
                android:id="@+id/ajouterAsso"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:alpha="0"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/beige">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choisir une asso"
                android:textSize="22dp"
                android:textColor="@color/white"
                android:layout_marginTop="80dp"
                android:layout_centerInParent="true"/>

            <Button
                android:id="@+id/choisirAsso"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:alpha="0"/>

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>