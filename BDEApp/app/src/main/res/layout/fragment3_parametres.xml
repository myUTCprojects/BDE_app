<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@color/dark_grey">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:text="ParamÃ¨tres"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:text="Couleur"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>

        <Switch
            android:id="@+id/colorChoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:switchMinWidth="80dp"
            android:maxHeight="15dp"
            android:textOn=""
            android:textOff=""
            android:thumb="@drawable/customswitchthumb"
            android:track="@drawable/customswitchtrack"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:text="Notifications"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>

        <Switch
            android:id="@+id/notificationChoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:switchMinWidth="80dp"
            android:maxHeight="15dp"
            android:textColor="@color/black"
            android:textOn=""
            android:textOff=""
            android:thumb="@drawable/customswitchthumb2"
            android:track="@drawable/customswitchtrack2"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:text="Synchronisation \nautomatique"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>

        <Switch
            android:id="@+id/synchronisationChoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:switchMinWidth="80dp"
            android:maxHeight="15dp"
            android:textColor="@color/black"
            android:textOn=""
            android:textOff=""
            android:thumb="@drawable/customswitchthumb3"
            android:track="@drawable/customswitchtrack3"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:text="Compte"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>


    </RelativeLayout>

</LinearLayout>